
@model List<Ecommerce.Model.Category>
@{
    Layout= "_SBAdminLayout";
}

<h2>List</h2>

<table class="table table-striped table-bordered table-hover table-responsive">

    <thead>
        <tr>
            <th>
                Name
            </th>
           
        </tr>

    </thead>

    <tbody>

        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
             
                <td>
                    <form>
                        <button type="submit" class="btn btn-primary" asp-controller="Customer" asp-action="Edit" asp-route-id="@category.Id">Edit</button>
                    </form>
                </td>
                <td>
                    <form>

                        <button type="submit" class="btn btn-danger" asp-controller="Customer" asp-action="Delete" asp-route-id="@category.Id">Delete</button>

                    </form>
                </td>
            </tr>

        }



    </tbody>


</table>

